{
  "name": "zustand-mutable",
  "private": false,
  "description": "A sweet way to use immer-like mutable updates",
  "version": "0.0.1",
  "author": "Danilo Britto",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zustandjs/zustand-mutable.git"
  },
  "type": "module",
  "source": "./src/index.ts",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "test": "pnpm run \"/^test:.*/\"",
    "test:types": "tsc --noEmit",
    "test:lintFormat": "biome check ./src",
    "test:spec": "vitest run"
  },
  "packageManager": "pnpm@10.18.3",
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@ossjs/release": "^0.10.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "happy-dom": "^20.0.11",
    "immer": "^11.1.3",
    "limu": "^4.1.1",
    "mutative": "^1.3.0",
    "react": "^19.2.3",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.2.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16",
    "zustand": "^5.0.9"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.2.5"
    }
  },
  "peerDependencies": {
    "zustand": "^5.0.9"
  }
}
